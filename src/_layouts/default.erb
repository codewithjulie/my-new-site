main: "bg-gray-100 dark:bg-zinc-800 shadow-sm p-4 md:py-12 rounded max-w-5xl mt-8 mx-auto mb-16 "
---

<!doctype html>
<html lang="<%= site.locale %>">
  <head>
    <%= render "head", metadata: site.metadata, title: resource.data.title %>
  </head>
  <body class="bg-gray-300 text-gray-900 dark:bg-black dark:text-gray-50 font-sans mx-2 leading-6">
    <%= render Shared::Navbar.new(metadata: site.metadata, resource: resource) %>

    <main class="<%= layout.data.main %>">
      <%= yield %>
    </main>

    <%= render "footer", metadata: site.metadata %>
  </body>
</html>
